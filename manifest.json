{
  "manifest_version": 3,
  "name": "Persona Kanban",
  "description": "Persona\u2011inspired colorful Kanban board (offline\u2011first)",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Persona Kanban",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ]
}